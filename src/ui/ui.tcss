RepoView {
    layout: vertical;
    background: $boost;
    margin: 1;
    min-width: 50;
    padding-top: 0;
    padding-left: 5;
    padding-right: 5;
    padding-bottom: 0;
    height: 3;
}

IssueView {
    height: 1;
}

.issue-title {
  color: cyan;
}

.issue-title:hover {
  color: red;
}

.repo-title {
  color: yellow;
  align: center middle;
  width: auto;
}

Markdown:hover {
    color: pink;
}

.repo-title:hover {
  color: red;
}

.display {
    display: block;
}

.none {
    display: none;
}
